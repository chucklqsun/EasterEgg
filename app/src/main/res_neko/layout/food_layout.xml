    <ImageView
        android:id="@id/icon"
        android:layout_width="64.0dip"
        android:layout_height="64.0dip"
        android:tint="?attr/colorControlNormal" />

    <TextView
        android:id="@id/text"
        android:layout_width="64.0dip"
        android:layout_height="wrap_content"
        android:gravity="center|top" />
</LinearLayout>